{
	"configurations": [
		{
			"name": "Hello World",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/samples/1-hello-world/make.py",
			"args": [
				"debug"
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Run tests",
			"type": "python",
			"request": "launch",
			"module": "pytest",
			"cwd": "${workspaceFolder}",
			"args": [
				"tests",
				"--cov=pymake",
				"--cov-report=xml"
			]
		}
	]
}
