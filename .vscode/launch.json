{
	"configurations": [
		{
			"name": "[1] Hello World",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/samples/1-hello-world/make.py",
			"args": [
				"debug"
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "[2] Hello Static",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/samples/2-hello-static/make.py",
			"args": [
				"debug"
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "[3] Hello Shared",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/samples/3-hello-shared/make.py",
			"args": [
				"debug"
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "[4] Hello GTest",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/samples/4-hello-gtest/make.py",
			"args": [
				"debug"
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "[5] Hello Valgrind",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/samples/5-hello-valgrind/make.py",
			"args": [
				"debug"
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Run unit tests",
			"type": "python",
			"request": "launch",
			"module": "pytest",
			"cwd": "${workspaceFolder}",
			"args": [
				"tests/unit",
				// Coverage must not be enabled or debugging will not work.
				// https://github.com/microsoft/vscode-python/issues/693
				// https://pytest-cov.readthedocs.io/en/latest/debuggers.html
				"--no-cov"
			]
		},
		{
			"name": "Run integration tests",
			"type": "python",
			"request": "launch",
			"module": "pytest",
			"cwd": "${workspaceFolder}",
			"args": [
				"tests/integration",
				// Coverage must not be enabled or debugging will not work.
				// https://github.com/microsoft/vscode-python/issues/693
				// https://pytest-cov.readthedocs.io/en/latest/debuggers.html
				"--no-cov"
			]
		}
	]
}
